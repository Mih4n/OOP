<Window x:Class="WPF.Second.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Калькулятор Векторов 3D" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="X" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Y" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="3" Text="Z" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Вектор 1 (A):" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <TextBox x:Name="VectorA_X" Grid.Row="1" Grid.Column="1" Text="1" Margin="5" Padding="3" TextAlignment="Center"/>
        <TextBox x:Name="VectorA_Y" Grid.Row="1" Grid.Column="2" Text="2" Margin="5" Padding="3" TextAlignment="Center"/>
        <TextBox x:Name="VectorA_Z" Grid.Row="1" Grid.Column="3" Text="3" Margin="5" Padding="3" TextAlignment="Center"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Вектор 2 (B):" VerticalAlignment="Center" Margin="0,5,10,5"/>
        <TextBox x:Name="VectorB_X" Grid.Row="2" Grid.Column="1" Text="4" Margin="5" Padding="3" TextAlignment="Center"/>
        <TextBox x:Name="VectorB_Y" Grid.Row="2" Grid.Column="2" Text="5" Margin="5" Padding="3" TextAlignment="Center"/>
        <TextBox x:Name="VectorB_Z" Grid.Row="2" Grid.Column="3" Text="6" Margin="5" Padding="3" TextAlignment="Center"/>

        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Content="Рассчитать Операции" Margin="5,15,5,15" Padding="10" Click="Calculate_Click"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="5" VerticalAlignment="Top">
            <TextBlock Text="Результаты:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="Result_Subtraction" Text="Вычитание (A - B):"/>
            <TextBlock x:Name="Result_Addition" Text="Сложение (A + B):"/>
            <TextBlock x:Name="Result_Multiplication" Text="Умножение (A * B):"/>
        </StackPanel>
    </Grid>
</Window>